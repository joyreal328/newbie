<!DOCTYPE.html>

<html>
    <head>
        <body>

        <script>
                //defining the reference type
                function CustomerBooking(customerName, film)
                {
                    this.customerName = customerName;
                    this.film = film;
                    
                }
                
            
                //creating and using reference type instances    
                    var firstBooking = new CustomerBooking("John Doe", "Beautiful life");
                    var secondBooking = new CustomerBooking("Joy Real", "Life of Pi");
            
                //calling the function
                document.write ("The 1st person to book is" + " " + firstBooking.customerName + "<br>"); 
                document.write ("The 2nd person to book is" + " " + secondBooking.customerName );
            
        </script>
            
            
        </body>    
        
    </head>
           
</html>
